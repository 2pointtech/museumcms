<h1>K-State History Screen Admin</h1>

<fieldset>
<legend>General Settings</legend>
<%= form_for @history_setting, :html => { :class => 'form-horizontal' } do |form| %>
  <%= form.control :attract_loop, 'Attract Loop' do %>
    <%= form.file_field :attract_loop %>

    <% unless @history_setting.attract_loop.blank? %>
      <div><%= @history_setting.attract_loop %></div>
    <% end %>
  <% end %>
  <%= form.control :home_banner1, 'Home Banner Image' do %>
    <%= form.file_field :home_banner1 %>

    <% unless @history_setting.home_banner1.blank? %>
      <div><%= @history_setting.home_banner1 %></div>
    <% end %>
  <% end %>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
<% end %>
</fieldset>
